{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [{ "type": "command", "command": "\"$CLAUDE_PROJECT_DIR\"/hooks/scripts/enforce-branch.sh" }]
      },
      {
        "matcher": "Grep|Glob",
        "hooks": [{ "type": "command", "command": "\"$CLAUDE_PROJECT_DIR\"/hooks/scripts/semantic-search-reminder.sh" }]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          { "type": "command", "command": "\"$CLAUDE_PROJECT_DIR\"/hooks/scripts/typecheck.sh" },
          { "type": "command", "command": "\"$CLAUDE_PROJECT_DIR\"/hooks/scripts/lint.sh" }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          { "type": "command", "command": "\"$CLAUDE_PROJECT_DIR\"/hooks/scripts/checkpoint-reminder.sh" }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          { "type": "command", "command": "\"$CLAUDE_PROJECT_DIR\"/hooks/scripts/config-guard.sh" },
          { "type": "command", "command": "\"$CLAUDE_PROJECT_DIR\"/hooks/scripts/test-guard.sh" }
        ]
      }
    ]
  }
}
